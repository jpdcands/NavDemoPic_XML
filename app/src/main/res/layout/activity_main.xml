<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/choose_your_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Choose Your Exercise"
            android:textColor="Red"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="100dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="400dp"
            android:layout_height="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/barbells" />

        <Button
            android:id="@+id/upper_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upper Body"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="540dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abs"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="611dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="652dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lower Body"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="510dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cardio"
            tools:layout_editor_absoluteX="270dp"
            tools:layout_editor_absoluteY="588dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"
            tools:layout_editor_absoluteX="286dp"
            tools:layout_editor_absoluteY="668dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise"
            tools:layout_editor_absoluteX="70dp"
            tools:layout_editor_absoluteY="151dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
